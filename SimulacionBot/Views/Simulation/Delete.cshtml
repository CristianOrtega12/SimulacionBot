<br />

<h2>Sin Procesar</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ServiceNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Observaciones)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cliente)
